<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>こんにちわ、ブログ</h1>
      <h2>私が作ったシンプルブログ</h2>
    </div>
  </div>
  <hr>
  <div class="row">
    <!-- プロフィール -->
    <div class="col-xs-12 col-md-4 col-lg-3">
      <%= image_tag(Picture.last.image.thumb) %>
      <br>
      Author: ムラケン
    </div>
    
    <!-- ブログ本文 -->
    <div class="col-xs-12 col-md-8 col-lg-9">
      <% @blogs.each do |blog| %>
        <%= link_to blog_path(blog.id) do %>
          <h3><%= blog.title %></h3>
        <% end %>
        <%= simple_format(blog.content.first(30)) %>...
        <br>
        <%= link_to '続きを読む', blog_path(blog.id) , :class => 'btn btn-default' %>
        <% if current_user != nil %> 
          <%= link_to '編集', edit_blog_path(blog.id) , :class => 'btn btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% if current_user == nil %>
    <%= link_to 'ログイン', sessions_path %>
  <% else %>
    <%= link_to 'ログアウト', session_path(current_user.id), :confirm => 'ログアウトしますか？',  :method => :delete , :class => 'btn btn-default' %>
    <%= link_to '新規投稿', new_blog_path, :class => 'btn btn-default' %>
    <%= link_to '管理者ページ', myblogadmin_blogs_path, :class => 'btn btn-default' %>
  <% end %>
</div>