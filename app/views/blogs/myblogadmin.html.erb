<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>管理者ページ</h1>
      <%= link_to '新規投稿', new_blog_path, :class => 'btn btn-primary' %>
      <%= link_to 'ログアウト', session_path(current_user.id), :confirm => 'ログアウトしますか？',  :method => :delete , :class => 'btn btn-default' %>
      <%= link_to 'TOP',root_path , :class => 'btn btn-default' %>
    </div>
    <hr>
    <div class="col-xs-12">
      <table class="table table-hover table-bordered">
        <tr>
          <th>投稿日</th>
          <th>公開状態</th>
          <th>件名</th>
          <th>本文</th>
          <th>編集</th>
          <th>確認</th>
          <th>削除</th>
        </tr>
        <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.created_at.strftime('%Y-%m-%d') %></td>
            <td><%= blog.status %></td>
            <td><%= blog.title %></td>
            <td><%= blog.content.first(20)%>...</td>
            <td><%= link_to '編集', edit_blog_path(blog.id) %></td>
            <td><%= link_to '確認', blog_path(blog.id) %></td>
            <td><%= link_to '削除', blog_path(blog.id), :confirm => '削除しても宜しいですか？',  :method => 'delete' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>