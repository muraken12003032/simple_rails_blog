<p id="notice"><%= notice %></p>

<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count%>件のエラーがあります。</h2>
      
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @blog.thumbnail == nil %>
    <%= link_to 'サムネイル画像を設定', new_thumbnail_path, :class => 'btn btn-default', :target => ["_blank"], :blog_id => @blog.id %>
  <% else %>
    <%= link_to 'サムネイル画像を設定', edit_thumbnail_path(@blog.thumbnail.id), :class => 'btn btn-default', :target => ["_blank"], :blog_id => @blog.id %>
  <% end %>

  <%= f.label :status %>
  <%= f.select :status, [["公開", true ], ["下書き", false ]], :class => 'form-horizontal' %>
  <br>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control' , size: "100x30" %>
  <br>
  <%= f.label :status %>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "ブログ一覧画面に戻る", blogs_path %>