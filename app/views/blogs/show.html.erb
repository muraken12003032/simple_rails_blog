<div class="container">
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-5 col-lg-4 col-xl-3">
      <%= render 'meta' %>
    </div>
    <div class="col-xs-12 col-md-7 col-lg-8 col-xl-9 content">
      <h1><%= @blog.title %></h1>
      <h4 class="text text-muted">Posted: <%= @blog.created_at.strftime('%Y-%m-%d') %></h4>
      <hr>
      <p>スポンサーリンク</p>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- レスポンシブ -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-9447884739029433"
           data-ad-slot="2474052504"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
      
      <%# ブログ目次 %>
      <h2>目次</h2>
      <%= table_of_content(@blog.content) %>
      
      <%# ブログ本文 %>
      <%= markdown(@blog.content) %>
      
      <hr>
      <p>スポンサーリンク</p>
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- レスポンシブ_記事下 -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-9447884739029433"
           data-ad-slot="6282269723"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
      
      <%# コメント欄 %>
      <br><hr><hr>
      <h2 class="text text-primary">コメント一覧</h2>
      <% if @comments != nil %>
        <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
      <% end %>
      
      <%# コメント投稿画面 %>
      <hr>
      <h2 class="text text-primary">コメントを投稿する</h2>
      <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
      
      <br><hr>
      <%= link_to 'TOP', root_path, :class => 'btn btn-default' %>
      <%= link_to 'back', :back, :class => 'btn btn-default' %>
      
      <%# ログイン済の場合は編集ボタンを表示 %>
      <% if current_user != nil %>
        <%= link_to '編集', edit_blog_path(@blog.id), :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>