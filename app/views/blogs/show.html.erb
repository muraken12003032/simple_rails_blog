<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-lg-3">
      <%= render 'meta' %>
    </div>
    <div class="col-xs-12 col-md-8 col-lg-9 content">
      <h1><%= @blog.title %></h1>
      <h4 class="text text-muted">Posted: <%= @blog.created_at.strftime('%Y-%m-%d') %></h4>
      <hr>
      <% if @blog.picture != nil %>
        <%= image_tag(@blog.picture.image.size_400x300) %>
      <% end %>
      <p><%= markdown(@blog.content) %></p>
      
      <hr>
      <%= link_to 'TOP', root_path, :class => 'btn btn-default' %>
      <%= link_to 'back', :back, :class => 'btn btn-default' %>
    </div>
  </div>
</div>