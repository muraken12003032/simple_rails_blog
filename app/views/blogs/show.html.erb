<div class="container">
  <div class="row">
    <div class="col-xs-12 content">
      <h1><%= @blog.title %></h1>
      <hr>
      <p><%= markdown(@blog.content) %></p>
      <br>
      Posted <%= @blog.created_at.strftime('%Y-%m-%d') %>
      <br>
      
      <hr>
      <%= link_to 'TOP', root_path, :class => 'btn btn-default' %>
      <%= link_to 'back', :back, :class => 'btn btn-default' %>
    </div>
  </div>
</div>