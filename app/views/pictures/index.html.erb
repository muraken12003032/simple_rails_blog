<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>画像のアップロード</h1>
      <%= form_for(@picture, url: upload_pictures_path, method: :post) do |f| %>
        
        <!-- 入力フォーム -->
        <%= f.label :"写真を選択" %>
        <%= f.file_field :image %>
        <br>
        <%= f.submit '投稿', :class => "btn btn-primary" %>
        <%= link_to '戻る',:back, :class => 'btn btn-default' %>
      <% end %>
      <% @pictures.each do |picture| %>
        <table class='table'>
          <tr>
            <td><%= image_tag(picture.image.thumb) %></td>
            <td>![picture](<%= picture.image %>)<br>![picture](<%= picture.image.size_400x300 %>)</td>
            <td><%= link_to '削除', picture_path(picture.id), :class => 'btn btn-danger' ,:confirm => '削除しても宜しいですか？',  :method => 'delete' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
